{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "./src",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/tests",
    "**/drafts",
    "temp/**"
  ]
}